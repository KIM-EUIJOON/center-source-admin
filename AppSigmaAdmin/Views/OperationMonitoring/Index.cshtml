@using AppSigmaAdmin.Utility

@section style {
    <style>
        .menuBox {
            margin-top: 45px;
            margin-left: 20%;
            padding: 40px;
            padding-top: 50px;
            font-size: 15pt;
        }
    </style>
}


@section funcTitle {
    <div class="funcTitleBer">
        運用監視
    </div>
}

<div class="ContentsBase">
    <div class="menuBox">
        <a href="@Html.Raw(AppSigmaAdmin.Library.ApplicationConfig.AzureMonitorURI)" target="_blank">運用管理</a>
        <b>：Azure Monitor</b>
        <br />
        <br />
        <form action="@Common.CreateUrl("/OperationMonitoring/PutMoniteringReport", false)" method="post">
            @Html.AntiForgeryToken()
            <label>運用レポート出力：</label>
            <input name="model.year" id="year" maxlength="4" type="text" value=@TempData["year"] />
            <label>年</label>
            <input name="model.month" id="month" maxlength="2" type="text" value=@TempData["month"] />
            <label>月</label>
            <br />
            <input type="submit" value="運用レポート出力" />
            <br />
            <label>@TempData["message"]</label>
        </form>
    </div>
</div>
